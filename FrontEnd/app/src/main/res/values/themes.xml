<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SANSANMULMUL" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SANSANMULMUL" parent="Base.Theme.SANSANMULMUL" />

    <style name="CustomSearchSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@drawable/spinner_search_background</item>
        <item name="android:popupBackground">@drawable/spinner_search_popup_background</item>
        <item name="android:popupElevation">0dp</item>
        <item name="android:dropDownVerticalOffset">3dp</item>
    </style>

    <style name="CustomFilterSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@drawable/spinner_filter_background</item>
        <item name="android:popupBackground">@drawable/spinner_filter_popup_background</item>
        <item name="android:popupElevation">0dp</item>
        <item name="android:dropDownVerticalOffset">3dp</item>
    </style>

    <style name="CustomGroupSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="android:spinnerMode">dropdown</item>
<!--        <item name="android:background">@drawable/spinner_filter_background</item>-->
        <item name="android:popupBackground">@drawable/spinner_group_popup_background</item>
        <item name="android:popupElevation">0dp</item>
        <item name="android:dropDownVerticalOffset">3dp</item>
    </style>

    <style name="GroupRegisterEnableBtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:text">가입\n신청</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_green_rectangle</item>
    </style>

    <style name="GroupRegisterWaitBtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:text">승인\n대기</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_grey_rectangle</item>
    </style>


</resources>