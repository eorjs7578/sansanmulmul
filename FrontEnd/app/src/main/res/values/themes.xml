<resources>
  <!-- Base application theme. -->
  <style name="Base.Theme.SANSANMULMUL" parent="Theme.Material3.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@android:color/white</item>
    <item name="colorOnPrimary">@android:color/black</item>
    <item name="colorSurface">@android:color/white</item>
    <item name="colorOnSurface">@android:color/black</item>
    <item name="android:colorBackground">@android:color/white</item>
    <item name="android:statusBarColor">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="background">@color/white</item>

    <item name="android:fontFamily">@font/mulish_regular</item>
    <item name="android:textColor">@color/sansanmulmul_dark_gray</item>

    <item name="android:windowActivityTransitions">true</item>

  </style>

  <style name="Theme.SANSANMULMUL" parent="Base.Theme.SANSANMULMUL" />

  <style name="CustomSearchSpinnerStyle" parent="Widget.AppCompat.Spinner">
    <item name="android:overlapAnchor">false</item>
    <item name="android:spinnerMode">dropdown</item>
    <item name="android:background">@drawable/spinner_search_background</item>
    <item name="android:popupBackground">@drawable/spinner_search_popup_background</item>
    <item name="android:popupElevation">0dp</item>
    <item name="android:dropDownVerticalOffset">3dp</item>
  </style>

  <style name="CustomFilterSpinnerStyle" parent="Widget.AppCompat.Spinner">
    <item name="android:overlapAnchor">false</item>
    <item name="android:spinnerMode">dropdown</item>
    <item name="android:background">@drawable/spinner_filter_background</item>
    <item name="android:popupBackground">@drawable/spinner_filter_popup_background</item>
    <item name="android:popupElevation">0dp</item>
    <item name="android:dropDownVerticalOffset">3dp</item>
  </style>

  <style name="CustomGroupSpinnerStyle" parent="Widget.AppCompat.Spinner">
    <item name="android:overlapAnchor">false</item>
    <item name="android:spinnerMode">dropdown</item>
    <!--        <item name="android:background">@drawable/spinner_filter_background</item>-->
    <item name="android:popupBackground">@drawable/spinner_group_popup_background</item>
    <item name="android:popupElevation">0dp</item>
    <item name="android:dropDownVerticalOffset">3dp</item>
  </style>

  <style name="GroupRegisterEnableBtnStyle" parent="Widget.AppCompat.Button">
    <item name="android:text">가입\n신청</item>
    <item name="android:textColor">@color/green</item>
    <item name="android:textSize">13sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/rounded_rectangle_white_green_10</item>
  </style>

  <style name="GroupRegisterWaitBtnStyle" parent="Widget.AppCompat.Button">
    <item name="android:text">승인\n대기</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">13sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/round_rectangle_grey_10</item>
  </style>


  <!-- Number Picker -->
  <style name="AppTheme.NumberPicker" parent="Base.Theme.SANSANMULMUL">
    <item name="android:textColorPrimary">@color/sansanmulmul_green</item>
    <item name="android:textColorHighlight">@color/sansanmulmul_green</item>
    <item name="android:textSize">16sp</item>
    <item name="selectableItemBackground">@color/sansanmulmul_green</item>
    <item name="colorControlNormal">@color/sansanmulmul_light_gray</item>
  </style>

  <style name="HomeTabRecommendationTitleStyle" parent="Widget.AppCompat.TextView">
    <item name="android:textSize">17sp</item>
    <item name="android:fontFamily">@font/mulish_bold</item>
    <item name="android:textColor">@color/black</item>
  </style>

</resources>