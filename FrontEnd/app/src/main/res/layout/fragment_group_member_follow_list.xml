<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="팔로워"
        android:id="@+id/tv_follwer_list"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/ib_close_follow_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/close"
        app:layout_constraintTop_toTopOf="@id/tv_follwer_list"
        app:layout_constraintStart_toEndOf="@id/tv_follwer_list"
        app:layout_constraintBottom_toBottomOf="@id/tv_follwer_list"

        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_follow_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_follwer_list"
         />
</androidx.constraintlayout.widget.ConstraintLayout>