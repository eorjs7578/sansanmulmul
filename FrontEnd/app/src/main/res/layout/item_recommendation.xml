<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_mountain_img"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_rectangle_transparent_20"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy1"
        android:tintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#80313131" />

    <TextView
        android:id="@+id/tv_mountain_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/mulish_bold"
        android:text="지리산"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_15"
        app:layout_constraintBottom_toBottomOf="@id/iv_mountain_img"
        app:layout_constraintStart_toStartOf="@id/iv_mountain_img" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_mountain_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_rectangle_red_20"
        android:fontFamily="@font/mulish_bold"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="어려움"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_mountain_name"
        app:layout_constraintEnd_toEndOf="@id/iv_mountain_img" />
</androidx.constraintlayout.widget.ConstraintLayout>