<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--상행, 하행 탭바-->
        <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_layout_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            segmentedgroup:layout_constraintEnd_toEndOf="parent"
            segmentedgroup:layout_constraintStart_toStartOf="parent"
            segmentedgroup:layout_constraintTop_toTopOf="parent"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_corner_radius="10dp"
            segmentedgroup:sc_tint_color="@color/green"
            >

            <RadioButton
                android:id="@+id/radio_uphill_btn"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="상행"
                android:layout_weight="1"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_downhill_btn"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="하행"
                android:layout_weight="1"
                android:textStyle="bold" />
        </info.hoang8f.android.segmented.SegmentedGroup>
        <TextView
            android:id="@+id/tv_mountain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가야산"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/group_detail_second_tab_mountain_name"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_layout_tab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가야산"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/group_detail_second_tab_course_name"
            android:layout_marginTop="10dp"

            app:layout_constraintTop_toBottomOf="@id/tv_mountain_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/btn_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="1dp"
            android:text="어려움"
            android:textColor="@color/white"
            android:background="@drawable/round_20_rectangle"
            android:backgroundTint="@color/group_detail_second_tab_difficulty_hard"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:layout_marginStart="10dp"
            app:tint="@color/group_detail_second_tab_course_change_btn"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name"
            app:layout_constraintStart_toEndOf="@id/btn_difficulty"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>